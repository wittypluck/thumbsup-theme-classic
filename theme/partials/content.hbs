<header>
  <a href="{{relative gallery.home.url}}">
    <h1>{{gallery.title}}</h1>
  </a>
</header>

<!--
  Breadcrumbs of parent albums
-->
{{#compare album.depth '!=' 0}}
  <nav class="breadcrumbs">
    {{#each breadcrumbs~}}
      <a class="breadcrumb-item" href="{{relative url}}#{{hash ../album.title}}">{{title}}</a>&nbsp;&nbsp;/&nbsp;&nbsp;
    {{~/each~}}
    <a class="breadcrumb-item" href="{{relative album.url}}">{{album.title}}</a>&nbsp;&nbsp;--&nbsp;&nbsp;
    <a class="breadcrumb-item" href="#bottom">Bottom</a>
  </nav>
{{/compare}}
<!--
  Nested albums
-->
<ul id="galleries">
 {{#each album.albums}}
 <li>
   <a href="{{relative url}}" id="{{hash title}}">
     <h3>{{title}}</h3>
     <div class="meta">
       {{summary}}
     </div>
     <ul class="grid">
       {{~#slice previews count=4~}}
       <li><img src="{{relative urls.thumbnail}}" /></li>
       {{~/slice}}
     </ul>
   </a>
 </li>
 {{/each}}
</ul>

<!--
  Render all thumbnails
-->
<ul id="media">
  {{#each album.files}}
    {{> thumbnail}}
  {{/each}}
</ul>
<!--
  Bottom of page link
-->
<div id='bottom'></div>
<!--
  Pagination
-->
{{#compare pagination.length '>' 1}}
  <nav class="pagination">
    Pages: 
    {{#each pagination}}
      {{#if current}}
        <a class="page current" href="{{relative url}}">{{index}}</a>
      {{else}}
        <a class="page" href="{{relative url}}">{{index}}</a>
      {{/if}}
    {{/each}}
  </nav>
{{/compare}}

<!--
  Zip file link
-->
{{#if album.zip}}
  <div id="zip">
    Download album as a <a href="{{album.zip}}">zip file</a>.
  </div>
{{/if}}

<!--
  Breadcrumbs of parent albums
-->
{{#compare album.depth '!=' 0}}
  <nav class="breadcrumbs">
    {{#each breadcrumbs~}}
      <a class="breadcrumb-item" href="{{relative url}}#{{hash ../album.title}}">{{title}}</a>&nbsp;&nbsp;/&nbsp;&nbsp;
    {{~/each~}}
    <a class="breadcrumb-item" href="{{relative album.url}}">{{album.title}}</a>&nbsp;&nbsp;--&nbsp;&nbsp;
    <a class="breadcrumb-item" href="#">Top</a>
  </nav>
{{/compare}}

<!--
  Optional footer
-->
{{#if gallery.footer}}
<footer>
  <p>{{{gallery.footer}}}</p>
</footer>
{{/if}}
